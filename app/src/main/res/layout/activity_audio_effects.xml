<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context="com.example.erhan.equalizer.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar1"
        android:layout_alignEnd="@+id/seekBar2"
        android:layout_marginBottom="57dp"
        android:text="@string/equalizerHeader"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <SeekBar
        android:id="@+id/seekBar0"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="220dp"
        android:background="@android:color/white"
        android:rotation="270" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/seekBar0"
        android:layout_marginStart="50dp"
        android:background="@android:color/white"
        android:rotation="270" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/seekBar1"
        android:layout_toEndOf="@+id/seekBar0"
        android:background="@android:color/white"
        android:rotation="270" />

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/seekBar2"
        android:layout_toEndOf="@+id/seekBar1"
        android:background="@android:color/white"
        android:rotation="270" />

    <SeekBar
        android:id="@+id/seekBar4"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/seekBar3"
        android:layout_toEndOf="@+id/seekBar2"
        android:background="@android:color/white"
        android:rotation="270" />

</RelativeLayout>
